<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中下状态 -->
    <item android:state_selected="true"><shape>
            <solid android:color="#993434" />

            <stroke android:width="1dp" android:color="#171717" />

            <corners android:radius="5dp" />

            <padding android:bottom="5dp" android:left="7dp" android:right="7dp" android:top="5dp" />
        </shape></item>
    <!-- 普通状态 -->
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/bg_color" android:startColor="#0079ff" />

            <stroke android:width="1dp" android:color="#171717" />

            <corners android:radius="5dp" />

            <padding android:bottom="5dp" android:left="7dp" android:right="7dp" android:top="5dp" />
        </shape></item>

</selector>